<%- include("./layout/header.ejs")%>
    <div class="container">
    <div class="panel panel-default">
        <!-- Default panel contents -->
        <div class="panel-heading">文章列表</div>
        <!-- Table -->
        <table class="table">
          <thead>
            <tr>
              <th>#</th>
              <th>文章标题</th>
              <th>作者</th>
              <th>创建日期</th>
              <th>操作<th>
            </tr>
          </thead>
          <tbody id='dataList'>
            <% articlesList.forEach(item =>{ %>
            <tr>
              <td><%= item.id %></td>
              <td> <a href="/article/info/<%= item.id%>"><%= item.title %></a></td>
              <td><%= item.author %></td>
              <td><%= item.ctime %></td>
              <td>
                <a href="javascript:;">顶</a> |
                <a href="javascript:;">踩</a>
              </td>
            </tr>
          <% }) %>
          </tbody>
        </table>
      </div>
        <!-- 分页器 -->
      <nav aria-label="Page navigation">
        <ul class="pagination">
          <li class="<%= nowPage-1 === 0? 'disabled':''%>">
            <<%= nowPage === 1? 'span':'a' %> href="?page=<%= nowPage === 1? 1:(nowPage-1) %>" aria-label="Previous">
              <span aria-hidden="true">&laquo;</span>
            </<%= nowPage === 1? 'span':'a' %>>
          </li>

          <% for(var i=0;i<totalPages;i++) { %>
          <li class="<%= nowPage  === i+1? 'active':'' %>"><a href="?page=<%= i+1 %>"><%= i+1 %></a></li>
         <% } %>

          <li class="<%= nowPage+1 > totalPages? 'disabled':''%>" >
            <<%= nowPage === totalPages? 'span':'a' %> href="?page=<%= nowPage === totalPages? nowPage:(nowPage+1) %>" aria-label="Next">
              <span aria-hidden="true">&raquo;</span>
            </<%= nowPage === totalPages? 'span':'a' %>>
          </li>
        </ul>
      </nav>
    </div>
<%- include("./layout/footer.ejs")%>
 